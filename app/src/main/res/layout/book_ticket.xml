<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="33dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookDepPointText"
                    android:layout_width="163dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="25dp"
                    android:text="DepPoint"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/bookDepTimeText"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="25dp"
                    android:text="00:00"
                    android:textAlignment="center"
                    android:textSize="34dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookArvPointText"
                    android:layout_width="163dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="25dp"
                    android:text="DepPoint"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/bookArvTimeText"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="25dp"
                    android:text="00:00"
                    android:textAlignment="center"
                    android:textSize="34dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/bookDateText"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="20dp"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookTicketAmountText"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="25dp"
                android:text="Tickets"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/bookAmountText"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="25dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="34dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookPriceText"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="25dp"
                android:text="Total price"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/bookTotalPriceText"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="25dp"
                android:text="0.0"
                android:textAlignment="center"
                android:textSize="34dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/discardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="Discard"
            android:textSize="20sp"
            tools:text="Discard" />

        <Button
            android:id="@+id/bookConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="Confirm"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>