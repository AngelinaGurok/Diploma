<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#6A76E5"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.110000014">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6A76E5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/routeDirectionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6A76E6"
                android:text="Direction"
                android:textAlignment="center"
                android:textColor="#E1FFFFFF"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:background="#E6F4F5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ticketsAmountText"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#E7F5F6"
                    android:hint="Seats"
                    android:paddingStart="5dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/depTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="00:00"
                    android:paddingStart="3dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/arrivalTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="23:59"
                    android:paddingStart="3dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#E5F3F4"
                    android:hint="10$"
                    android:paddingStart="3dp"
                    android:textAlignment="textStart"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>