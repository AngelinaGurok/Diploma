<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="124dp"
        android:layout_marginLeft="20dp"
        android:background="#3F51B5"
        android:backgroundTint="#3F51B5"
        android:paddingTop="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="113dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderIDText"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="ID"
                android:textAlignment="center"
                android:textColor="#D3FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileDirectionText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#C7D1DD"
                android:text="Direction"
                android:textAlignment="center"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profileDateText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textColor="#DDE0F1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/profileTimeText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Time"
                    android:textAlignment="center"
                    android:textColor="#DDE0F1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/profileAmountText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Amount"
                    android:textAlignment="center"
                    android:textColor="#DDE0F1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/profilePriceText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Price"
                    android:textAlignment="center"
                    android:textColor="#DDE0F1"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>